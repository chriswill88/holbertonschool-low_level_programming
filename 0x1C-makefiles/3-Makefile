# -*- MakeFile -*-

CC = gcc
SRC = holberton.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM = rm

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) -c -o $@ $<

re: oclean all

clean:
	$(RM) -f *~ holberton

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

# $< - the first prerequisite
# $@ - the name of the file being generated
# line 5 uses % - it allows for all the .c files to be manipulated so that theres a .o instead.
